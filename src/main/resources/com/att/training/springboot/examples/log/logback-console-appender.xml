<?xml version="1.0" encoding="UTF-8"?>
<included>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <if condition='isDefined("KUBERNETES_SERVICE_HOST")'>
        <then>
            <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
                <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                    <providers>
                        <pattern>
                            <omitEmptyFields>true</omitEmptyFields>
                            <pattern>
                                {
                                "timestamp": "%date",
                                "level": "%level",
                                "thread": "%thread",
                                "app": "${appName:-app}"
                                "class": "%logger",
                                "message": "%message",
                                "stackTrace": "%throwable",
                                }
                            </pattern>
                        </pattern>
                        <!--                <arguments>-->
                        <!--                    <fieldName>args</fieldName>-->
                        <!--                </arguments>-->
                        <!--                <mdc>-->
                        <!--                    <fieldName>mdc</fieldName>-->
                        <!--                </mdc>-->
                        <nestedField>
                            <fieldName>additionalInfo</fieldName>
                            <providers>
                                <arguments/>
                                <logstashMarkers/>
                                <mdc/>
                            </providers>
                        </nestedField>
                    </providers>
                </encoder>
            </appender>
        </then>
        <else>
            <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
                <encoder>
                    <pattern>%clr(%d){faint} %clr(${appName:-app}){yellow} %clr(%-5level) %clr(%thread){magenta} %clr(%logger{50}){cyan} %msg%n</pattern>
                </encoder>
            </appender>
        </else>
    </if>
</included>
