<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%clr(%d{HH:mm:ss.SSS}){faint} %clr(%-5level) %clr(%thread){magenta} %clr(%logger{20}){cyan} %msg
                %clr(%mdc){blue}%n
            </pattern>
        </encoder>
    </appender>

    <logger name="com.azure.spring.cloud" level="trace"/>
    <logger name="com.azure.data.appconfiguration" level="trace"/>

    <root level="info">
        <appender-ref ref="stdout"/>
    </root>
</configuration>